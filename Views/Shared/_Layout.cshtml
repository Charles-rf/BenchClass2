<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BenchClass</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BenchClass.styles.css" asp-append-version="true" />
</head>
<body>
    <header>


@*        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BenchClass</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Gym" asp-action="Index">Gym</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="GymClass" asp-action="Index">Gym Classes</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>*@
        <nav class="navbar navbar-expand-lg navbar-light bg-white py-3">
            <div class="container px-5">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <span class="fw-bolder text-primary" style="font-size: 30px;">BenchClass</span>


                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav gap-2 ms-auto mb-2 mb-lg-0 small fw-bolder" style="font-size: 18px;">

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Gym" asp-action="Index">Gyms</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="GymClass" asp-action="Index">Classes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="User" asp-action="Index">Users</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center justify-content-xxl-start mb-3" style="font-size: 16px;">
                                <li class="nav-item">
                                    @*<div class="d-grid gap-1 d-sm-flex justify-content-sm-center justify-content-xxl-start mb-3" style="font-size: 16px;">*@
                                        <a class="btn btn-primary btn-lg bg-gradient-primary-to-secondary text-white mb-4 fw-bolder" asp-area="" asp-controller="Dashboard" asp-action="Index" style="font-size: 16px">Profile</a>
                                    @*</div>*@
                                </li>
                                <li class="nav-item">
                                        <form asp-area="" asp-controller="Account" asp-action="Logout">
                                    <button class="btn btn-outline-danger btn-lg fw-bolder" style="font-size: 16px">Logout</button>
                                        </form>
                                </li>
                            </div>
                        }
                        else
                        {
                            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center justify-content-xxl-start mb-3" style="font-size: 16px;">
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="btn btn-primary btn-lg bg-gradient-primary-to-secondary text-white mb-4 fw-bolder" asp-area="" asp-controller="Account" asp-action="Login" style="font-size: 16px">LOG IN</a>
                                        <a class="btn btn-primary btn-lg btn-outline-dark  text-gradient mb-4 fw-bolder" asp-area="" asp-controller="Account" asp-action="Register" style="font-size: 16px">REGISTER</a>
                                    </li>
                                </ul>
                            </div>
                        }

                        
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer-->
    <footer class="bg-white py-4 mt-auto">
        <div class="container px-5">
            <div class="row align-items-center justify-content-between flex-column flex-sm-row">
                <div class="col-auto"><div class="small m-0">Copyright &copy; BenchClass 2023</div></div>
                <div class="col-auto">
                    <a class="small" href="#!">Privacy</a>
                    <span class="mx-1">&middot;</span>
                    <a class="small" href="#!">Terms</a>
                    <span class="mx-1">&middot;</span>
                    <a class="small" href="#!">Contact</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
