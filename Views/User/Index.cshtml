@using BenchClass.ViewModels;
@model List<UserViewModel>

@{
    ViewData["Title"] = "Users";
}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Modern Business - Start Bootstrap Template</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Custom Google font-->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@100;200;300;400;500;600;700;800;900&amp;display=swap" rel="stylesheet" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column h-100 bg-light">
    <main class="flex-shrink-0">
        <!-- Projects Section-->
        <section class="py-5">
            <div class="container px-5 mb-5">
                <div class="text-center mb-5">
                    <h1 class="display-5 fw-bolder mb-0"><span class="text-gradient d-inline">Users</span></h1>
                </div>
                <div class="row justify-content-center">
                    <div class="col-lg-11 col-xl-9 col-xxl-8 d-flex flex-column align-items-center">
                        @foreach (var user in Model)
                        {
                            <div class="card overflow-hidden shadow rounded-4 border-0 mb-5" style="width: 1000px">
                                <div class="card-body p-0">
                                    <div class="d-flex align-items-center">
                                        <div class="p-4" style="flex: 1;">
                                            <p>
                                                @{
                                                    var benchMax = user.BenchMax == null ? "?" : user.BenchMax.ToString();
                                                    <small class="text-body-secondary fw-bold">Bench:</small>
                                                    <small class="text-body-secondary">@benchMax</small>

                                                    var squatMax = user.SquatMax == null ? "?" : user.SquatMax.ToString();
                                                    <small class="text-body-secondary fw-bold">Squat:</small>
                                                    <small class="text-body-secondary">@squatMax</small>

                                                    var deadliftMax = user.DeadliftMax == null ? "?" : user.DeadliftMax.ToString();
                                                    <small class="text-body-secondary fw-bold">Deadlift:</small>
                                                    <small class="text-body-secondary">@deadliftMax</small>
                                                }
                                            </p>
                                            <p></p>
                                            <h2>
                                                <a class="fw-bolder text-decoration-none text-dark" asp-controller="User" asp-action="Detail" asp-route-id="@user.Id">@user.UserName</a>
                                            </h2>

                                            @{
                                                var userDescription = user.UserDescription == null ? "Hi, I'm " + user.UserName + " and I love this app!" : user.UserDescription;
                                                <p>@userDescription</p>
                                            }

                                            <br>
                                            <div class="btn-group d-flex justify-content-center">
                                                @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                                {
                                                    <a class="btn btn-sm btn-outline-success" asp-controller="User" asp-action="Detail" asp-route-id="@user.Id">View</a>
                                                    <a class="btn btn-sm btn-outline-success" asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                                                    <a class="btn btn-sm btn-outline-success" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                                                }
                                                else
                                                {
                                                    <a class="btn btn-sm btn-outline-success" asp-controller="User" asp-action="Detail" asp-route-id="@user.Id">View</a>
                                                }
                                            </div>
                                        </div>
                                        @if(user.ProfileImageUrl == null)
                                        {
                                            <img class="img-fluid" src="~/assets/BenchClass.png" style="max-width: 500px; height: auto;" alt="">

                                        }
                                        else
                                        {
                                            <img class="img-fluid" src="@user.ProfileImageUrl" style="max-width: 500px; height: auto;" alt="">
                                        }
                                    </div>
                                </div>
                            </div>



                            @*<div class="card overflow-hidden shadow rounded-4 border-0 mb-5" style="width: 750px;">
                        <div class="card-body p-0">
