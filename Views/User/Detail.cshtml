@using BenchClass.ViewModels;
@model UserDetailViewModel

@{
    ViewData["Title"] = "User";
}

<main>
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Personal - Start Bootstrap Theme</title>
        <!-- Favicon-->
        <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
        <!-- Custom Google font-->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@100;200;300;400;500;600;700;800;900&amp;display=swap" rel="stylesheet" />
        <!-- Bootstrap icons-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="css/styles.css" rel="stylesheet" />
    </head>
    <body class="d-flex flex-column h-100">
        <main class="flex-shrink-0">
            <!-- Header-->
            <header class="py-5">
                <div class="container px-5 pb-5">
                    <div class="row">
                        <div class="col-xxl-4">
                            <!-- Header text content-->
                            <div class="text-center text-xxl-start">
                                <div class="badge bg-gradient-primary-to-secondary text-white mb-4" style="font-size: 2rem;">
                                    <div class="text-uppercase" style="font-size: 0.8em;">Build &middot; Grow &middot; Develop</div>
                                </div>
                                <h1 class="mt-4">@Model.UserName</h1>
                                @{
                                    var userDescription = Model.UserDescription == null ? "Hi, I'm " + Model.UserName + " and I love this app!" : Model.UserDescription;
                                    <div class="fs-3 fw-light text-muted">@userDescription</div>
                                }
                               
                                <br>
                                @*<div class="fs-3 fw-light text-muted">@Model.Description</div>*@
                                @{
                                    var benchMax = Model.BenchMax == null ? "?" : Model.BenchMax.ToString();
                                    var squatMax = Model.SquatMax == null ? "?" : Model.SquatMax.ToString();
                                    var deadliftMax = Model.DeadliftMax == null ? "?" : Model.DeadliftMax.ToString();

                                    <p><strong>Bench:</strong> @benchMax</p>
                                    <p><strong>Squat:</strong> @squatMax</p>
                                    <p><strong>Deadlift:</strong> @deadliftMax</p>
                                }

                                @if(Model.City != null && Model.Country != null)
                                {
                                    <p><strong>Location:</strong> @Model.City, @Model.Country</p>
                                }
                                else
                                {
                                    <p><strong>Location:</strong>Unknown</p>
                                }

                                <br>

                                <div class="d-grid gap-3 d-sm-flex justify-content-sm-center justify-content-xxl-start mb-3">

                                    @if (!User.Identity.IsAuthenticated)
                                    {
                                        <a class="btn btn-primary btn-lg px-5 py-3 me-sm-3 fs-6 fw-bolder" asp-controller="Account" asp-action="Register">Follow!</a>
                                        <a class="btn btn-outline-dark btn-lg px-5 py-3 fs-6 fw-bolder" asp-controller="Account" asp-action="Register">Connect</a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-primary btn-lg px-5 py-3 me-sm-3 fs-6 fw-bolder" asp-controller="Gym" asp-action="Index">Follow!</a>
                                        <a class="btn btn-outline-dark btn-lg px-5 py-3 fs-6 fw-bolder" asp-controller="GymClass" asp-action="Index">Connect</a>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-xxl-8">
                            <!-- Header profile picture-->
                            <div class="d-flex justify-content-center mt-5 mt-xxl-0">
                                @if (Model.ProfileImageUrl == null)
                                {
                                    <img class="img-fluid" src="~/assets/BenchClass.png" style="max-width: 800px; height: auto;" alt="">

                                }
                                else
                                {
                                    <img class="img-fluid" src="@Model.ProfileImageUrl" style="max-width: 800px; height: auto;" alt="">
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </header>
        </main>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="js/scripts.js"></script>
    </body>
</html>

